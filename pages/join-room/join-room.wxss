/* pages/join-room/join-room.wxss */
@import "../../widget/search.wxss";
page {
    height: 100%;
}

.page-container {
    display: flex;
    flex-direction: column;
}

#qr-search {
    width: 50rpx;
    height: 50rpx;
    margin-left: 10rpx;
    vertical-align: middle;
}

.widget-search-input input {
    width: 475rpx;
    height: 66rpx;
    display: inline-block;
    vertical-align: middle;
}

.content-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title-container {
    display: flex;
    align-items: center;
    height: 68rpx;
    width: 100%;
    /*border-top: 1px solid #CACDD3;*/
    border-bottom: 1px solid #CACDD3;
}

.content-title {
    margin-left: 20rpx;
    font-family: "Microsoft Yahei";
    color: #000;
    font-weight: 400;
}

.image-container {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: center;
    width: 100%;
}