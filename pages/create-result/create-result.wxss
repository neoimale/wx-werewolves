/* pages/create-result/create-result.wxss */
page {
    height: 100%;
}

.page-container {
    display: flex;
    flex-direction: column;
}

.section {
    margin-top: 25px;
    display: flex;
    justify-content: center;
}

.text-room-value {
    color: #09BB07;
    font-size: 35pt;
}

.text-success-title {
    margin-top: 5px;
    color: #353535;
    font-size: 14pt;
}

.text-friendly-reminder {
    margin-left: 15px;
    text-align: center;
    margin-right: 15px;
}

.btn-area {
    margin-top: 25px;
}

.section-footer {
    flex: auto;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.text-god-view {
    text-align: center;
    font-size: 11pt;
    color: #576B95;
    margin-bottom: 50rpx;
}

.qrcode-panel {
    background-color: #fff;
    padding: 40rpx;
    width: 560rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.qrcode-canvas {
    width: 500rpx;
    height: 500rpx;
    margin-top: 40rpx;
}

.qrcode-desc {
    color: #888;
    font-size: 13pt;
    margin-top: 40rpx; 
    padding: 0 20rpx;
}

.panel-close {
    width: 46rpx;
    height: 46rpx;
    padding: 10rpx;
}

