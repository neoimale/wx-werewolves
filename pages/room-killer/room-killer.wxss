/* pages/room-killer/room-killer.wxss */

.role-panel {
    flex-direction: column;
    padding: 30rpx;
}
.player-role {
    font-size: 26pt;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.config-panel {
    display: flex;
    flex-direction: column;
    padding: 0 30rpx;
    margin: 40rpx auto;
}

.config-item {
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 20rpx 10rpx;
}

.config-item .config-item-key {
    flex: 1;
    font-size: 14pt;
    color: #353535;
}

.config-item .config-item-value {
    flex: 2;
    font-size: 14pt;
    color: #353535;
    margin-left: 10rpx;
}
