.widget-user-profile {
    width: 180rpx;
    padding: 20rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.widget-profile-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.widget-profile-name, .widget-profile-desc {
    font-size: 13pt;
    margin-top: 10rpx;
}